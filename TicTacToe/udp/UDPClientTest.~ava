public class UDPClientTest {

  public static void main(String[] args) {
    UDPClient c = new UDPClient();
    c.start();
    try {
      c.sleep(3000);
      c.interrupt();
      System.out.println("Thread unterbrochen");
    } catch(InterruptedException ie){

    }

  }
}
